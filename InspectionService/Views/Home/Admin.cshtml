                    priceXml += '<labor>' + $('#laborVal input').val() + '</labor>';
                    priceXml += '<other>' + $('#otherVal input').val() + '</other>';
                    priceXml += '<fees>' + $('#feesVal input').val() + '</fees>';
                    priceXml += '<tax>' + $('#taxVal input').val() + '</tax>';
                    priceXml += '<total>' + $('#totalVal input').val() + '</total>';
                    priceXml += '</priceList>';
